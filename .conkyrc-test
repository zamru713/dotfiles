imlib_cache_size 0
alignment bottom_left
background yes
border_width 1
cpu_avg_samples 2
default_color 868163
default_outline_color blue
default_shade_color blue
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont Inconsolata:size=11
gap_x 5
gap_y 0
minimum_size 1920 16
maximum_width 1920
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window no
own_window_class Conky
own_window_type desktop
stippled_borders 0
update_interval 0.5
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
own_window_transparent yes
double_buffer yes
format_human_readable yes
temperature_unit fahrenheit

TEXT

CPU: $cpu% ${cpubar 6,100} \
| RAM: ${membar 4,100}        \
${color 5a603e} /home: ${fs_bar 6,100 /home} \
$color | ${color 5a603e} /fast: ${fs_bar 6,100 /fast}         \
$alignc \
$if_mpd_playing \
${color 000000} $mpd_artist - $mpd_title ($mpd_album) ${mpd_bar 4,150} \
$endif \
$alignr\
${color e2dfb2} Up: ${upspeedgraph enp0s25 6, 100 -l} \
$color | ${color 7e653d} Down: ${upspeedgraph enp0s25 6, 100 -l}         \
${color}Outside:${weather http://weather.noaa.gov/pub/data/observations/metar/stations/ KONT temperature} F 
